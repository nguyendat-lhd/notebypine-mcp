{
  "name": "notebypine-mcp",
  "version": "1.0.0",
  "description": "MCP server for managing incident reports, solutions, and knowledge base using PocketBase",
  "keywords": ["mcp", "model-context-protocol", "incident-management", "knowledge-base", "pocketbase"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/notebypine-mcp.git"
  },
  "module": "src/index.ts",
  "type": "module",
  "private": false,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist",
    "start": "bun src/index.ts",
    "pb:serve": "./pocketbase serve --dir ./pb_data",
    "setup:pocketbase": "bun scripts/setup-pocketbase.ts",
    "test": "bun test",
    "test:mcp": "bun test tests/mcp/",
    "test:skills": "bun test tests/skills.test.ts",
    "benchmark": "bun scripts/benchmark-code-mode.ts",
    "agent:demo": "bun agent/examples/incident_to_kb.ts demo",
    "agent:test": "bun scripts/agent-e2e-test.ts",
    "agent:validate": "bun scripts/agent-validate.ts",
    "agent:metrics": "bun scripts/agent-metrics.ts",
    "agent:audit": "bun scripts/agent-audit.ts",
    "agent:feedback": "bun scripts/agent-feedback.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "pocketbase": "^0.21.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
